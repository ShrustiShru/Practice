
@{
    ViewBag.Title = "Login";
    
}

@using (Html.BeginForm())
{
    <h1>Login Page</h1>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                UserName: @Html.Editor("email",new{ htmlAttributes = new { @class = "form-control" } })
                Password: @Html.Editor("password",new { htmlAttributes = new { @class = "form-control" } })

                <button type="submit">SIGN IN</button>
                <p style="color:red"> @Html.ValidationSummary()</p>
            </div>
        </div>
    </div>
}

